@model TheHouseOfDelightV1.DbModel.Food
@{
    ViewData["Title"] = "Edit";
}

    <form method="post" action="/Admin1/Edit">
        <input type="hidden" name="ID" value="@Model.ID" />
        <div class="form-group  col-md-12">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
        </div>
        <div class="form-group  col-md-12">
            <label for="Description">Description</label>
            <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description">
        </div>
        <div class="form-group col-md-2 ">
            <label for="PrepTime">Prep Time</label>
            <input type="text" class="form-control" id="PrepTime" name="PrepTime" value="@Model.PrepTime">
        </div>
        <div class="form-group col-md-2">
            <label for="CookTime">Cook Time</label>
            <input type="text" class="form-control" id="CookTime" name="CookTime" value="@Model.CookTime">
        </div>
        <div class="form-group col-md-2">
            <label for="TotatTime">Total Time</label>
            <input type="text" class="form-control" id="TotatTime" name="TotatTime" value="@Model.TotatTime">
        </div>
        <div class="form-group col-md-2">
            <label for="Servings">Servings</label>
            <input type="text" class="form-control" id="Servings" name="Servings" value="@Model.Servings">
        </div>


        <input type="submit" class="btn btn-primary " value ="Save"/>
        <a href="/admin1/food" class="btn btn-primary ">Back</a>
    </form>