@model List<TheHouseOfDelightV1.DbModel.Types>
@{
    ViewData["Title"] = "Types";
}

<h1>Types</h1>


<a href="/admin1/AddNewTypes/" class="btn btn-primary">Add New Types</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Edit|Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Description</td>

                <td>
                    <a href="/admin1/EditTypes/@item.ID" class="btn btn-primary">Edit</a>
                    <button type="button" id="btnDeleteTypes" class="btn btn-primary btnDeleteTypes" data-typesid="@item.ID">Delete</button>

                </td>
            </tr>

        }

    </tbody>
</table>


<div>
    <form id="DeleteTypesForm" method="post" action="/Admin1/DeleteTypes">
        <input type="hidden" id="idField" name="ID" value="0" />

    </form>

</div>




<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script>

    $(document).ready(function () {


        $(".btnDeleteTypes").click(function () {
            var IdOfTypes = $(this).data("typesid");
            $("#idField").val(IdOfTypes);
            if (confirm('Are you sure to delete Types?')) {
                $("#DeleteTypesForm").submit();
            }
         });

});
</script>