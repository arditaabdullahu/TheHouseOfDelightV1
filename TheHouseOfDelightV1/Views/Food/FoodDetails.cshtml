@model TheHouseOfDelightV1.DbModel.Food


@{
    ViewData["Title"] = "FoodDetails";
}

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Name</h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="http://placehold.it/750x500" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Description</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Details</h3>
            
              <p class="card-text"><i class="fa fa-clock-o" aria-hidden="true"></i> Prep Time: @Model.PrepTime
              <p class="card-text"><i class="fa fa-clock-o" aria-hidden="true"></i> Cook Time: @Model.CookTime
              <p class="card-text"><i class="fa fa-clock-o" aria-hidden="true"></i> Total Time: @Model.TotatTime
              <p class="card-text"><i class="fa fa-cutlery" aria-hidden="true"></i> Servings: @Model.Servings
            
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Proj<ects</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="~/Images/1.jpg" alt="">
                
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="~/Images/2.jpg" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="~/Images/3.jpg" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="~/Images/4.jpg" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
